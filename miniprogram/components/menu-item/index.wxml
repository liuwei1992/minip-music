<!--components/menu-item/index.wxml-->
<wxs src="/utils/format.wxs" module="fmt"></wxs>
<view class="menuItem">
  <view class="top">
    <image class="img" src="{{itemData.coverImgUrl}}" mode="widthFix" />
    <view class="count">{{fmt.formatCount(itemData.playCount)}}</view>
  </view>
  <view class="bottom">
    {{itemData.name}}
  </view>
</view>